# Switch spaces
cmd - 1 : yabai -m space --focus 1; yabai -m window --focus 1
cmd - 2 : yabai -m space --focus 2; yabai -m window --focus 2
cmd - 3 : yabai -m space --focus 3; yabai -m window --focus 3
cmd - 4 : yabai -m space --focus 4; yabai -m window --focus 4
cmd - 5 : yabai -m space --focus 5; yabai -m window --focus 5
cmd - 6 : yabai -m space --focus 6; yabai -m window --focus 6
cmd - 7 : yabai -m space --focus 7; yabai -m window --focus 7
cmd - 8 : yabai -m space --focus 8; yabai -m window --focus 8
cmd - 9 : yabai -m space --focus 9; yabai -m window --focus 9

# Switch window focus
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# Swap focused window
shift + cmd - h : yabai -m window --swap west
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - l : yabai -m window --swap east

# Resize focused window
alt + cmd - h :            yabai -m window --resize left:-30:0
shift + alt + cmd - h :    yabai -m window --resize left:30:0

alt + cmd - j :            yabai -m window --resize bottom:0:30
shift + alt + cmd - j :    yabai -m window --resize bottom:0:-30

alt + cmd - k :            yabai -m window --resize top:0:-30
shift + alt + cmd - k :    yabai -m window --resize top:0:30

alt + cmd - l :            yabai -m window --resize right:30:0
shift + alt + cmd - l :    yabai -m window --resize right:-30:0

# Move floating window
ctrl + alt + cmd - h : yabai -m window --move rel:-100:0
ctrl + alt + cmd - j : yabai -m window --move rel:0:100
ctrl + alt + cmd - k : yabai -m window --move rel:0:-100
ctrl + alt + cmd - l : yabai -m window --move rel:100:0

# Warp
ctrl + cmd - h : yabai -m window --warp west
ctrl + cmd - j : yabai -m window --warp south
ctrl + cmd - k : yabai -m window --warp north
ctrl + cmd - l : yabai -m window --warp east

# Send focused window to given space
shift + cmd - 1 : yabai -m window --space 1
shift + cmd - 2 : yabai -m window --space 2
shift + cmd - 3 : yabai -m window --space 3
shift + cmd - 4 : yabai -m window --space 4
shift + cmd - 5 : yabai -m window --space 5
shift + cmd - 6 : yabai -m window --space 6
shift + cmd - 7 : yabai -m window --space 7
shift + cmd - 8 : yabai -m window --space 8
shift + cmd - 9 : yabai -m window --space 9

# Toggle split axis
cmd - s: yabai -m window --toggle split

# Toggle floating/tiling (0x31 = ' ')
cmd - 0x31: yabai -m window --toggle float

# Close focused window
shift + cmd - q : yabai -m window --close; yabai -m window --focus recent
#kill $(yabai -m query --windows --window | jq '.pid')

# Launch terminal
cmd - return : kitty &

# Launch browsers (0x2A = '\')
cmd - 0x2A :            open -a qutebrowser --new
shift + cmd - 0x2A :    open -a firefox --new

# Fullscreen
cmd - f : yabai -m window --toggle zoom-fullscreen

# Toggle gaps
cmd - g: yabai -m space --toggle gap; yabai -m space --toggle padding

# Restart yabai
cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
